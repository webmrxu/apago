<!-- loop="loop" 循环 autoplay="autoplay" 自动播放 bindtimeupdate: 播放中获取播放进度-->
  <view class="video__window">
  <video 
      src="https://www.apago.top/video/awesome.mp4" 
      class="video__content"  
      id="video"
      loop="loop"
      autoplay="autoplay"
      bindtimeupdate="bindtimeupdate"
      bindplay="videoBindplay"
      bindended="videoBindended"
      binderror="videoBinderror"
      >
  </video>
</view>    

<view class="page-body">
  <view class="page-body-wrapper">
    <canvas canvas-id="canvas" style='height:{{videoHeight}}px;width:{{videoWidth}}px' class="canvas">
      <cover-view class="video-header">
        <cover-view>奇趣时空</cover-view>
      </cover-view>

      <cover-view class="video-footer">
        <cover-view>活动介绍详情</cover-view>
        <cover-view class="clolor {{showText?'show':'hide'}}">
          活动介绍详情活动介绍详情活动介绍详情
        </cover-view>
      </cover-view>

        
    </canvas>
  </view>
</view>

