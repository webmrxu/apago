.video__content{
  z-index: 1;
  margin: 0;
  width: 750rpx;
  padding: 0;
  object-fit: fill;
  transition: 0.23s ease all;
  float: left;
}

.canvas {
  position: fixed;
  z-index: 110;
  top: 0;
}

.info-item{
  float: left;
  width: 33.32%
}

.voice{
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
  padding: 2px 0;
}
.voice-button{
  width: 20%;
  padding: 10px 0;
  text-align: center;
}
.voice-input{
  width: 60%;
}
.voice-send{
  width: 20%;
}