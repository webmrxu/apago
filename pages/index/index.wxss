.video__content{
  text-align: center;
  width: 750rpx;
  height: 1334rpx;
  z-index: 100;
  position: fixed;
  object-fit: fill;
}

.video-header{
  width: 100%;
  background: #fff;
  font-size: 12px;
  position: fixed;
  top: 0;
  z-index: 1000;
  padding: 20px 0;
  text-align: center;
}
.video-footer{
  width: 100%;
  background: #fff;
  font-size: 12px;
  position: fixed;
  bottom: 0;
  z-index: 1000;
  padding: 16px 0;
  text-align: center;
  height: 200px;
  box-shadow: 0 4px 4px rgba(0, 0, 0, 0.03);
}

/* test */
.canvas {
  position: fixed;
  z-index: 110;
}
.center-button{
  position: fixed;
  z-index: 1000;
  top: 150px;
  background: rgba(0, 0, 0, 0.3);
  font-size: 12px;
  padding: 8px;
  border-radius: 10px;
  color: #fff;
  transition: 0.5s ease all;
}
.center-button-hiden{
  left: -100px;
}
.center-button-show{
  left: 20px;
}


